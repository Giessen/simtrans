DEF {{name}} Transform {
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 0.85 0.85 0.85
          specularColor 0.85 0.85 0.85
          emissiveColor 0.05 0.05 0.05
          shininess 0.5
        }
      }
      {%- for g in mesh.geometries %}
      geometry IndexedFaceSet {
        coord Coordinate {
          point [
            {%- for n in g.vertex %}
            {{n[0]}} {{n[1]}} {{n[2]}},
            {%- endfor %}
          ]
        }
        coordIndex [
          {%- for n in g.vertex_index %}
          {{n[0]}}, {{n[1]}}, {{n[2]}}, -1,
          {%- endfor %}
        ]
        normalPerVertex FALSE
      }
      {%- endfor %}
    }
  ]
}
