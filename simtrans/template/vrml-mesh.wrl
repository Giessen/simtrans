DEF {{name}} Transform {
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 0.85 0.85 0.85
        }
      }
      geometry IndexedFaceSet {
        coord Coordinate {
          point [
            {%- for n in mesh.vertex %}
            {{n[0]}} {{n[1]}} {{n[2]}},
            {%- endfor %}
          ]
        }
        coordIndex [
          {%- for n in mesh.vertex_index %}
          {{n[0]}}, {{n[1]}}, {{n[2]}}, -1,
          {%- endfor %}
        ]
        normalPerVertex FALSE
      }
    }
  ]
}
